<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2006/01/customui">
    <ribbon>
        <tabs>
            <tab idMso="TabTasks">
                <group id="Group1" label="Task Master">
                    <button id="BtnLoadTree" imageMso="OutlineShowDetail" onAction="BtnLoadTree_Click" label="Load Tree" size="large" />
                    <button id="BtnFlagTask" imageMso="FlagMessage" onAction="FlagAsTask_Click" label="Flag Task" size="large" />
                    <menu id="ViewMenu" imageMso="FindDialog" label="View" size="large" itemSize="large">
                        <button id="BtnHideHeadersNoChildren" imageMso="ReviewShowOrHideComment" onAction="BtnHideHeadersNoChildren_Click" label="Hide Empty Headers" />
                    </menu>
                    <menu id="UtilitiesMenu" imageMso="CurrentViewSettings" label="Utilities" size="large" itemSize="large">
                        <button id="BtnRefreshIDList" imageMso="AccessRefreshAllLists" onAction="BtnRefreshIDList_Click" label="Refresh IDList" />
                        <button id="BtnSplitToDoID" imageMso="ConvertTextToTable" onAction="BtnSplitToDoID_Click" label="Split ToDoID" />
                        <button id="BtnReviseProjectInfo" imageMso="EditQuery" onAction="BtnReviseProjectInfo_Click" label="Revise Dictionary" />
                        <button id="BtnCompressIDs" imageMso="ReviewCombineRevisions" onAction="BtnCompressIDs_Click" label="Compress IDs" />
                        <button id="BtnHookToggle" imageMso="PositionAbsoluteMarks" onAction="BtnHookToggle_Click" getLabel="GetHookButtonText" />
                        <button id="BtnMigrateIDs" onAction="BtnMigrateIDs_Click" label="MigrateToDoIDs" />
                    </menu>
                </group>
            </tab>
            <tab idMso="TabMail">
              <group id="Group2" label="Task Master">
                <button id="FlagAsTask" imageMso="FlagMessage" onAction="FlagAsTask_Click" label="Flag Task" size="large" />
                <button id="SortEmail" imageMso="MoveToFolder" onAction="SortEmail_Click" label="Sort Email" size="large"/>
                <button id="UndoSort" imageMso="Undo" onAction="UndoSort_Click" label="Undo Sort" size="large"/>
                <button id="QuickFiler" imageMso="UpdateFolder" onAction="QuickFiler_Click" label="Quick Filer" size="large" />
                <menu id="TryMenu" imageMso="TechnicalSupport" label="Try Methods" size="large" itemSize="large">
                  <toggleButton id="DarkMode" imageMso="BlackAndWhiteInverseGrayscale" getPressed="ToggleDarkMode_GetPressed" onAction="ToggleDarkMode_Click" label="Dark Mode"/>
                  <button id="GetConversationDataframe" imageMso="TraceDependentCells" onAction="GetConversationDataframe_Click" label="GetConversationDataframe" />
                  <button id="GetConversationOutlookTable" imageMso="TraceDependentCells" onAction="GetConversationOutlookTable_Click" label="GetConversationOutlookTable" />
                  <button id="GetMailItemInfo" imageMso="TraceDependentCells" onAction="GetMailItemInfo_Click" label="GetMailItemInfo" />
                  <button id="GetQfcDataModel" imageMso="TraceDependentCells" onAction="GetQfcDataModel_Click" label="GetQfcDataModel" />
                  <button id="GetTableInView" imageMso="TraceDependentCells" onAction="GetTableInView_Click" label="GetTableInView" />
                  <button id="LegacySortMailToExistingRun2" imageMso="TraceDependentCells" onAction="LegacySortMailToExistingRun2_Click" label="LegacySortMailToExistingRun2" />
                  <button id="RebuildProjInfo" imageMso="TraceDependentCells" onAction="RebuildProjInfo_Click" label="RebuildProjInfo" />
                  <button id="RecipientGetInfo" imageMso="TraceDependentCells" onAction="RecipientGetInfo_Click" label="RecipientGetInfo" />
                  <button id="SubstituteIdRoot" imageMso="TraceDependentCells" onAction="SubstituteIdRoot_Click" label="SubstituteIdRoot" />
                  <button id="GetImage" imageMso="TraceDependentCells" onAction="GetImage_Click" label="GetImage"/>
                </menu>
              </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>